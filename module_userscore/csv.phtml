   <li>$name_warning1</li>
  !endif
  !if noprop iswordof $remark
   <li>$name_warning2</li>
  !endif
  !if noauto iswordof $remark
   <li>$name_warning3</li>
  !endif
  !if $erased!=$empty
   <li>$name_warning4:
   <span class="tt wims_login">
   !replace internal , by ,$ $ in $erased
   </span></li>
  !endif
  !if $missing!=$empty
   <li>
   !if full notwordof $remark
    $name_nologin1:
   !else
    $name_nologin2:
   !endif
   <span class="tt wims_login">$missing</span>
